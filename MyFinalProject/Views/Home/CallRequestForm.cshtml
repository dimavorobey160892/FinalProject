<div class="call-background row" id="call-request-form">
    <div class="call-background-overlay">
        @using (Html.BeginForm("CallRequest", "Home", FormMethod.Post, new { @class = "container g-3", id = "call-form" }))
        {
            <div class="row">
                <h1 class="call-request-text">
                    Call request
                </h1>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label for="Name" class="form-label">Enter your name</label>
                    <input type="text" class="form-control" id="Name" name="Name" required />
                </div>
                <div class="col-md-6">
                </div>
                <div class="col-md-6">
                    <label for="PhoneNumber" class="form-label">Enter your phone number</label>
                    <input type="tel" class="form-control" id="PhoneNumber" name="PhoneNumber" placeholder="+380-96-12-34-567" pattern="+380-[0-9]{2}-[0-9]{2}-[0-9]{3}" required />
                </div>
                <div class="col-md-6">
                </div>
                <div class="col-md-6">
                    <button type="submit" class="btn btn-danger send-btn">Send</button>
                </div>
            </div>
        }
    </div>
</div>